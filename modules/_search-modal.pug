mixin search-modal()
  //- search model
  .modal.fade.search#sidebarModalSearch(
    tabindex="-1"
    role="dialog"
    aria-hidden="true"
  )
    .modal-dialog.modal-dialog--vertical(
      role="document"
    )
      .modal-content
        .modal-body
          form.search__form
            .input-group
              .input-group-prepend
                span.input-group-text
                  i.fe.fe-search
              input.form-control.search__input(
                type= "text"
                placeholder="Search"
              )
          .search__content
            -
              var searchResult = [
                {
                  image : "./images/team-logo-1.jpg",
                  title : "Airbnb",
                  datetime : "Updated 2hr ago"
                },
                {
                  image : "./images/team-logo-2.jpg",
                  title : "Medium Corporation",
                  datetime : "Updated 2hr ago"
                },
                {
                  image : "./images/project-1.jpg",
                  title : "Homepage Redesign",
                  datetime : "Updated 4hr ago"
                },
                {
                  image : "./images/project-2.jpg",
                  title : "Travels & Time",
                  datetime : "Updated 4hr ago"
                },
                {
                  image : "./images/project-3.jpg",
                  title : "Safari Exploration",
                  datetime : "Updated 4hr ago"
                },
                {
                  image : "./images/avatar-1.jpg",
                  title : "Dianna Smiley",
                  isOnline : true
                },
                {
                  image : "./images/avatar-2.jpg",
                  title : "Ab Hadley",
                  isOnline : false
                }
              ]
            .list-group.list-group-flush.search-content__list
              each val in searchResult
                a.list-group-item
                  .row.align-items-center
                    .col-auto
                      .search-content__img
                        img(
                          src= val.image
                          alt="avatar"
                        )
                    .col
                      h4.search-content__title= val.title
                      p.small.text-muted
                        if val.datetime
                          i.fe.fe-clock
                          time(
                            datetime= "2018-05-24"
                          )= val.datetime
                        if isOnline
                          span.text-success
                          | Online
                        else
                          span.text-danger
